{% endblock %}

{% block content %}
{% include 'partials/greyNavbar.njk' %}
<div id="content" role="main" class="cierralo-content">
    <div class="schedule-header cierralo-flex-colum">
      <p class="schedule-title cierralo-font-helveltica-medium cierralo-purplish-grey-two">Citas Agendadas</p>
    </div> 
    <div class="scheduling-divider">

    </div>
    <div class="schedule-subtitle-box">
      <p class="schedule-subtitle cierralo-font-helveltica-medium cierralo-purplish-grey-two">A continuación puedes ver las visitas que se encuentran pendientes</p>
    </div>
    <div class="calendar-section cierralo-flex-row">
      <div class="grey-calendar-container cierralo-flex-colum">
