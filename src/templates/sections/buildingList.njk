{% extends "partials/base.njk" %}

{% block meta %}
{% endblock %}
{% block content %}

<div id="list-building" class="cierralo-default-section content scaffold-list" role="main">
            <p class="cierralo-title cierralo-font-helveltica-medium">Todas las propiedades</p>

            <div class="cierralo-default-divider"></div>
            <div class="cierralo-all-building-container">
                <div class="cierralo-all-buildings">
                </div>
                <div class="cierralo-filter-buildings">
                    <div class="cierralo-font-helveltica-neue-light cierralo-filter-left">
                        <div>
                            <div>Precio</div>
                            <div class="cierralo-filter-divider"></div>
                            <div class="cierralo-slider">
                                <section class="range-slider">
                                    <div class="slider-value-container inline-block" id="slide-box-1">
                                        <p class="slider-value letter-spacing-dot-one cierralo-white-text cierralo-font-helveltica-neue-light" id="slider-1"></p>
                                    </div>
                                    <input value="4.4" min="3.5" max="5.0" step="0.1" type="range" class="filter-slider">
                                    <div class="slider-value-container inline-block" id="slide-box-2">
                                        <p class="slider-value letter-spacing-dot-one cierralo-white-text cierralo-font-helveltica-neue-light" id="slider-2"></p>
                                    </div>
                                    <input value="5.0" min="3.5" max="5.0" step="0.1" type="range" class="filter-slider">
                                    <div class="range-text-container">
                                        <p class="range-text inline-block cierralo-font-helvetica-thin cierralo-pinkish-grey-two float-left">Min.</p>
                                        <p class="range-text inline-block cierralo-font-helvetica-thin cierralo-pinkish-grey-two float-right">Max.</p>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <div class="municipality-container">
                            <div>Delegaci√≥n</div>
                            <div class="cierralo-filter-divider"></div>
                        </div>
                        <div class="share-container cierralo-flex-row-flex-start">
                            <p class="share-text inline-block cierralo-font-helveltica-neue-light cierralo-pinkish-grey letter-spacing-dot-six">Comparte: </p>
                            <div class="share-icons-box inline-block">
                                <a href="" class="building-list-share-link cursor-pointer">
                                    <img src="./img/icons/twitter-logo-button@3x.png" alt="" class="inline-block building-list-share-icon">
                                </a>
                                <a href="" class="building-list-share-link cursor-pointer">
                                    <img src="./img/icons/facebook-logo-button@3x.png" alt="" class="inline-block building-list-share-icon">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cierralo-default-divider"></div>
        </div>
{% endblock %}
